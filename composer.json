{
    "autoload": {
        "psr-4": {
            "Hibla\\MysqlClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "rcalicdan/mysql-binary-protocol": "^2.0",
        "hiblaphp/event-loop":"dev-main",
        "hiblaphp/promise":"dev-main",
        "hiblaphp/stream":"dev-main",
        "hiblaphp/socket":"dev-main"
    },
    "require-dev": {
       "pestphp/pest": "^4.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
